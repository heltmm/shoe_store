<h1>Stores:</h1>

<% if @stores.any? %>
  <table class="table table-striped table-info">
    <thead>
      <tr>
        <th>Store</th>
        <th>Location</th>
        <th>Update</th>
        <th>Delete</th>
      </tr>
    </thead>
  </tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><a href='/store/<%= store.id %>'><%= store.name %></a></td>
        <td><%= store.location %></td>
        <td>
          <form action="/store/update/<%= store.id %>" method="get">
            <button type="submit">Update</button>
          </form>
        </td>
        <td>
          <form action="/store/delete/<%= store.id %>" method="post">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<%else%>
  <h2>Currently no open stores</h2>
<%end%>

<% if @store_delete %>
  <div class="alert alert-warning">
    <h3><%= @deleted_store.name %> was succesfully deleted</h3>
  </div>
<% end %>
